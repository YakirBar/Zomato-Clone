pipeline {
    agent any

    environment {
        DOCKER_HOME = '/usr/bin' // This is the default location for Docker executable in many systems
    }

    stages {
        stage('Build Docker Image') {
            steps {
                // Build the Docker image using the Dockerfile in the repository
                script {
                    docker.build("yourimagename:latest")
                }
            }
        }
        stage('Check Docker Image') {
            steps {
                // Check if the Docker image was created successfully
                script {
                    def dockerImage = docker.image("yourimagename:latest")
                    if (dockerImage.exists()) {
                        echo "Docker image 'yourimagename:latest' was successfully created"
                    } else {
                        error "Failed to create Docker image 'yourimagename:latest'"
                    }
                }
            }
        }
    }
}
